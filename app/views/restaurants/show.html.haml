
%div.transparent-box
  %div.restaurant_detail
    %h1= @restaurant.name
    %p= @restaurant.description
    %span Average rating:
    %span.badge= star_rating(@restaurant.average_rating.to_i)

  %div.review_detail
    -if current_user == nil
      %p You must sign in to review
    -elsif current_user.has_reviewed?(@restaurant)
      %p You have already reviewed this restaurant
    -else
      = link_to "Write a Review", new_restaurant_review_path(@restaurant)

    %p= @restaurant.rating
    - @reviews.each do |review|
      %ul
        %li
        =review.thoughts
        %span.badge
        =star_rating(review.rating)
        %p= pluralize review.endorsements.count, 'endorsement'
        =link_to "Endorse Review", new_review_endorsement_path(review)
