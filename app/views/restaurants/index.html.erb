<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
  <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
  <p><%= restaurant.description %></p>
  <% if current_user.id == restaurant.user_id %>
    <h4><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></h4>
    <h4><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></h4>
  <% end %>
  <h4><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %></h4>
    <p>
    <% if restaurant.reviews.any? %>
       <% restaurant.reviews.each do |review| %>
         <p><%= review.thoughts %></p>
         <p><%= review.rating %></p>
         <% if current_user.id == review.user_id %>
           <!-- <h4><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></h4> -->
           <h4><%= link_to "Delete Review", restaurant_review_path(review.restaurant.id, review.id), method: :delete %></h4>
         <% end %>
       <% end %>
    <% end %>
    </p>
  <% end %>
<% else %>
  <h1>No restaurants yet</h1>
<% end %>

<a href="restaurants/new">Add a restaurant</a>
